{
  "name": "ultimate_squash_game",
  "version": "1.0.0",
  "description": "AI パワーアップ機能を搭載したクラシックなスカッシュゲーム。MVCパターンで実装され、TDDで開発されています。",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest tests/unit",
    "test:unit:watch": "jest tests/unit --watch",
    "test:unit:coverage": "jest tests/unit --coverage",
    "test:e2e": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "report": "playwright show-report",
    "test:e2e:ada": "playwright test tests/e2e/ada-system.spec.js",
    "test:e2e:sound": "playwright test tests/e2e/sound-system.spec.js",
    "test:e2e:accessibility": "playwright test tests/e2e/accessibility.spec.js",
    "test:e2e:pwa": "playwright test tests/e2e/pwa.spec.js",
    "test:e2e:ranking": "playwright test tests/e2e/ranking.spec.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CaCC-Lab/Ultimate_Squash_Game.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CaCC-Lab/Ultimate_Squash_Game/issues"
  },
  "homepage": "https://github.com/CaCC-Lab/Ultimate_Squash_Game#readme",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-proposal-class-properties": "^7.18.0",
    "@babel/plugin-proposal-decorators": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@playwright/test": "1.54.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {
    "@vercel/kv": "^3.0.0"
  }
}
