#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# ESLint check
echo "📋 Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint check failed. Please fix linting errors before committing."
  exit 1
fi

# Check for ES6 exports in test files
echo "🔎 Checking for ES6 exports in test files..."
if grep -r "^export " tests/unit/*.js 2>/dev/null; then
  echo "❌ Found ES6 export statements in test files. Please use CommonJS format."
  exit 1
fi

# Run unit tests
echo "🧪 Running unit tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "❌ Unit tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "✅ All pre-commit checks passed!"