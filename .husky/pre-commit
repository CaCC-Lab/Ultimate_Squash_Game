#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# ESLint check
echo "ğŸ“‹ Running ESLint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint check failed. Please fix linting errors before committing."
  exit 1
fi

# Check for ES6 exports in test files
echo "ğŸ” Checking for ES6 exports in test files..."
if grep -r "^export " tests/unit/*.js 2>/dev/null; then
  echo "âŒ Found ES6 export statements in test files. Please use CommonJS format."
  exit 1
fi

# Run unit tests
echo "ğŸ§ª Running unit tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix failing tests before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"