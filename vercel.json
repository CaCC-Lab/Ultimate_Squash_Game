{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/scores/(.*)",
      "destination": "/api/scores/$1"
    },
    {
      "source": "/game.html",
      "destination": "/docs/game.html"
    },
    {
      "source": "/manifest.json",
      "destination": "/docs/manifest.json"
    },
    {
      "source": "/sw.js",
      "destination": "/docs/sw.js"
    },
    {
      "source": "/js/(.*)",
      "destination": "/docs/js/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/docs/$1"
    }
  ],
  "outputDirectory": "docs",
  "env": {
    "RANKING_SECRET_KEY": "@ranking-secret-key"
  },
  "functions": {
    "api/scores/submit.js": {
      "maxDuration": 10
    },
    "api/scores/get.js": {
      "maxDuration": 10
    }
  }
}